<!DOCTYPE html>
<html>
<head>
  <title>HackerRefactor</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div id="user nav">
    <% if user_signed_in? %>
<p style="float:right; padding-right: 10px;"> Logged in as: <%= current_user.username %><button class="btn btn-default btn-xs"><%= link_to "Logout", destroy_user_session_path, method: :delete %></button></p>
      <button class="btn btn-default btn-xs"><%= link_to 'Edit profile', edit_user_registration_path %></button>
    <% else %>
      <%= link_to "Sign up", new_user_registration_path %> |
      <%= link_to "Login", new_user_session_path %>
    <% end %>
  </div>

  <div class="container">
    <% if flash[:notice] %>
      <div class="alert alert-info">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="alert alert-danger">
        <%= flash[:alert] %>
      </div>
    <% end %>
<%= yield %>

</body>
</html>
